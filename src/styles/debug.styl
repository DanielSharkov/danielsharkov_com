.debug
	.layout, &.layout
		*
			outline: solid 1px var(--foreground-01) !important
			outline-offset: -1px

	.boundaries, &.boundaries
		svg, div, li, nav, header, footer
			outline: solid 1px #888 !important
			outline-offset: -1px

		a, button, input, textarea
			outline: dashed 1px #FF1DFF !important
			outline-offset: -2px !important

		ul
			background-color: var(--background-01)
			outline: solid 1px #F00
			outline-offset: 1px

		span, a, p, q, b, i, label,
		h1, h2, h3, h4, h5, h6
			position: relative
			outline: dotted 1px #FF1DFF
			background-color: #FF1DFF10
			&:not(i)
				outline-offset: -2px

		span, a, p, q, b, i:not(.fas), label,
		h1, h2, h3, h4, h5, h6
			&::before, &::after
				content: ''
				position: absolute
				background-color: #FF1DFF
				opacity: .5
			&::before
				top: 50%
				left: 0
				width: calc(100% - 2px)
				height: 1px
				transform: translate(1px, -.5px)
			&::after
				top: 0
				left: 50%
				height: calc(100% - 2px)
				width: 1px
				transform: translate(-.5px, 1px)

		img
			outline: solid 1px rgba(0, 0, 0, .25)
			&::before
				top: 50%
				left: 0
				width: calc(100% - 2px)
				height: 1px
				transform: translate(1px, -.5px)
			&::after
				top: 0
				left: 50%
				height: calc(100% - 2px)
				width: 1px
				transform: translate(-.5px, 1px)
