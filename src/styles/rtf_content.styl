.rtf-content
	>:first-child
		margin-top: 0 !important
	>:last-child
		margin-bottom: 0 !important
	h1, h2
		padding-bottom: .3rem
		border-bottom: 1px solid var(--border-light)
	h1, h2, h3, h4, h5, h6
		margin-top: 1.5rem
		margin-bottom: 1rem
		line-height: 1.25
		color: var(--foreground)
		letter-spacing: 0
	h1
		font-size: 2rem
	h2
		font-size: 1.5rem
	h3
		font-size: 1.25rem
		font-weight: 500
	h4
		font-size: 1rem
	h5
		font-size: .875rem
	h6
		font-size: .85rem
		color: var(--foreground-05)
	h4, h5, h6
		font-weight: 400
	hr
		margin: 1.5rem 0
		border-top: solid 1px transparent
		border-bottom: solid .25rem var(--border-light)
	code, pre
		padding: .2rem .4rem
		font-size: .85rem
	code
		border-radius: .25rem
		background-color: var(--foreground-005)
	pre
		margin-bottom: 1rem
		padding: 1rem
		border-radius: .5rem
		overflow: auto
		background-color: var(--foreground-0025)
		line-height: 1.5
		code
			background: transparent
			border-radius: 0
			padding: 0
	em
		font-style: italic
		font-family: 'Lora'
	p
		margin-bottom: 1rem
		line-height: 1.75
	p, ul
		color: var(--foreground-075)
	a
		color: var(--color-accent)
		&:not(:hover)
			text-decoration: none
	ul
		margin-bottom: 1rem
		padding-left: 2rem
		list-style: disc
		li
			margin-top: .25rem
			line-height: 1.5
			input[type='checkbox']
				margin-right: .5rem
		h1, h2, h3, h4, h5, h6
			margin-bottom: .25rem
	img
		max-width: 100%
		margin-top: 1rem
		border-radius: .25rem
	@media screen and (max-width: 600px)
		h1
			font-size: 1.5rem
		h2
			font-size: 1.25rem
		h3
			font-size: 1rem
		h4
			font-size: 1rem
		h5
			font-size: .9rem
		h6
			font-size: .8rem

@media (prefers-color-scheme: dark)
	.rtf-content
		a
			color: #7396FF

