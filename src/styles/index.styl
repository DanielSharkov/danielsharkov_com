#app
	width 100%
	flex-flow row wrap
	background none
	background-color var(--background)
	z-index 0
	transition: var(--transition)

html, body
	width: 100%
	height: 100%
	margin: 0
	padding: 0
	box-sizing: border-box
	border: none
	outline: none


main, header, article, footer, nav, div, input,
button, textarea, svg, svg > *, span, a, p, small, form,
q, b, i, label, section, h1, h2, h3, h4, h5, h6, img, ul, li,
dl, dt, dd, select, optgroup, pre, code
	margin: 0
	padding: 0
	background: none
	border: none
	color inherit
	outline: none
	box-sizing: border-box
	transition: all var(--transition)
	&:before, &:after
		margin: 0
		padding: 0
		background: none
		border: none
		color inherit
		outline: none
		box-sizing: border-box
		transition: all var(--transition)


html, body, #app, main, header, article, footer
	transition: none


h1, h2, h3, h4, h5, h6
	font-family: var(--font-stack-header)
	font-style: var(--font-style-header)
	font-weight: var(--font-weight-header)
	line-height: var(--font-line-height-header)


h1, .h1
	font-size: 2.25rem
h2, .h2
	font-size: 1.85rem
h3, .h3
	font-size: 1.65rem
h4, .h4
	font-size: 1.5rem
h5, .h5
	font-size: 1.25rem
h6, .h6
	font-size: 1.15rem


p, textarea, .paragraph
	line-height: var(--line-height)

h1, h2, h3, h4, h5, h6, p, span, a
	&.display-1
		font-size: 6rem
		letter-spacing: .2rem
		font-weight: 300
	&.display-2
		font-size: 5rem
		letter-spacing: .2rem
		font-weight: 300
	&.display-3
		font-size: 4rem
		letter-spacing: .2rem
		font-weight: 300
	&.display-3
		font-size: 3rem
		letter-spacing: .2rem
		font-weight: 300
	&.subtitle-1
		font-size: 1.25rem
	&.subtitle-2
		font-size: 1.15rem
	&.subtitle-3
		font-size: 1rem
	&.subtitle-4
		font-size: 0.9rem
	&.subtitle-5, &.subtitle-6
		font-size: .75rem


code
	font-family: 'Cascadia Code', 'Fira Code', Consolas, monospace
	font-size: 1rem

pre
	font-family: inherit


.text-center
	text-align: center
.text-left
	text-align: left
.text-right
	text-align: right
.text-justify
	text-align: justify


[lock-scroll='true']
	overflow: hidden !important


prefix($property, $value, $prefixes)
	for $prefix in $prefixes
		if $prefix is webkit
			-webkit-{$property}: $value
		if $prefix is moz
			-moz-{$property}: $value
		if $prefix is ms
			-ms-{$property}: $value
		if $prefix is o
			-o-{$property}: $value
		if $prefix is spec
			{$property}: $value


$user_select($value)
	prefix('user-select', $value, moz ms webkit spec)


button, .icon, .block-select
	$user_select('none')


.full-width
	width: 100%


.page-width
	max-width: var(--page-width)
	width: 100%
	margin: 0 auto


.page-wrapper
	@extend .page-width
	padding: 2rem 0 10rem 0


b, strong
	font-weight: $font-weight-body--bolder


ul, ol
	list-style: none


$visually_hidden = @block {
	position: absolute !important
	overflow: hidden
	clip: rect(0 0 0 0)
	height: 1px
	width: 1px
	margin: -1px
	padding: 0
	border: 0
}

.hidden, .hide
	display: none !important


.visually-hidden
	{$visually_hidden}


.visibility-hidden
	visibility: hidden

hr
	margin: 0
	border: none
	border-top: var(--seperator-border)
	border-bottom: var(--seperator-border-bottom)

.image-square
	position: relative
	height: auto
	&:before
		content: ''
		padding-top: 100%
		float: left
	img
		position: absolute
		top: 0
		left: 0
		height: 100%
		width: 100%
		object-fit: contain

.image-square-height
	position: relative
	width: auto
	&:before
		content: ''
		padding-left: 100%
		float: left
	img
		position: absolute
		top: 0
		left: 0
		height: 100%
		width: 100%
		object-fit: contain



