@import './debug'

@import './flex'
@import './grid'
@import './rtf_content'

// Themes ......................................................................

@import './themes/default'
@import './themes/dark'

html, body
	background-color: var(--background)


body
	display: grid
	color: var(--foreground)
	-webkit-font-smoothing: antialiased
	-webkit-text-size-adjust: 100%
	/* Global font */
	font-size: var(--font-size-base)
	font-family: var(--font-stack-body)
	font-style: var(--font-style-body)
	font-weight: var(--font-weight-body)

// Icons .......................................................................

.icon
	&.fill > *, .fill
		fill: var(--foreground)
	&.stroke > *, .stroke
		stroke: var(--foreground)
	&-tiny
		width: .75rem
		height: .75rem
	&-small
		width: 1rem
		height: 1rem
	&-default
		width: 1.15rem
		height: 1.15rem
	&-medium
		width: 1.25rem
		height: 1.25rem
	&-big
		width: 1.5rem
		height: 1.5rem
	&-large
		width: 1.75rem
		height: 1.75rem
